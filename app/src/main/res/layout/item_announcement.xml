<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="announcementItem"
            type="ru.spbstu.mobileapplication.domain.announcement.entity.AnnouncementFilterEntity" />
    </data>

    <!--   todo: надо продумать. -->
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_purple"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{announcementItem.city.name}"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Москва" />

            <TextView
                android:id="@+id/tv_underground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{announcementItem.underground}"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Метро: Крылатское" />

            <TextView
                android:id="@+id/tv_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{announcementItem.district}"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Район: Крылатское" />

            <TextView
                android:id="@+id/tv_rooms_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Комнат: 2" />

            <TextView
                android:id="@+id/tv_price_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{announcementItem.minPricePerMonth }"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_refrigerator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_washing_machine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <!-- Добавьте остальные элементы TextView для других удобств -->

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
